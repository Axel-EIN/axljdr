{% extends 'element.html.twig' %}
{% block element_content %}
    <div class="col-12 col-lg-4 text-center">
        <img class="img-fluid" src="{{ asset(classe.icone) }}" alt="Icône de la Classe" title="{{classe.nom}}" />
    </div>

    <div class="col-12 col-lg-8">
        <div class="card card-body h-100">
            <p class="card-text">{{ classe.description|raw|nl2br }}</p>
        </div>
    </div>

    <!-- LES ECOLES DE CETTE CLASSE -->
    <section class="col-12 col-lg-6 my-3 text-center">
        <div class="card card-body h-100">
            <h2 class="card-title py-3">Ecoles de <strong>{{ classe.nom }}</strong> :</h2>
            <div class="card-text row text-center justify-content-center align-items-center">

                <!-- UNE ECOLE -->
                {% for une_ecole in classe.ecoles %}
                    <div class="mb-4 hover-shine">
                        <a href="{{ path('regles_ecole', {id: une_ecole.id} ) }}">
                            <img class="img-480" src="{{ asset(une_ecole.image) }}" alt="Image d'une école" title="{{une_ecole.nom}}" />
                        </a><br/>
                        <strong><a href="{{ path('regles_ecole', {id: une_ecole.id} ) }}" >{{ une_ecole.nom }}</a></strong>
                    </div>
                {% else %}
                    <span class="text-muted">Désolé ! Il n'y a pas encore d'école disponible pour cette classe !</span>
                {% endfor %}

            </div>
        </div>
    </section>

    <!-- PERSONNAGES DE CETTE CLASSE -->
    <section class="col-12 col-lg-6 my-3 text-center">
        <div class="card card-body h-100">
            <h2 class="card-title py-3">Personnages <strong>{{ classe.nom }}</strong> :</h2>
            <div class="card-text ml-lg-3 row text-center justify-content-center align-items-center">

                <!-- UN PERSONNAGE -->
                {% for un_personnage in classe.personnages %}
                    <div class="p-1 hover-zoom-x2">
                        <a href="{{ path('personnage_profil', {id: un_personnage.id} ) }}">
                            <img class="img-128" src="{{ asset(un_personnage.icone) }}" alt="Icône d'un personnage" title="Voir profil de {{un_personnage.prenom}}" />
                        </a>
                    </div>
                {% else %}
                    <span class="text-muted">Désolé ! Il n'y a pas encore de personnages disponible pour cette classe !</span>
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}
