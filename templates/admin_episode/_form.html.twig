<main class="col-12">
    {{ form_start(form) }}
        <div class="row form-wrapper">
            <div class="col-3">{{ form_row(form.titre) }}</div>
            <div class="col-3">{{ form_row(form.chapitreParent) }}</div>
            <div class="col-2">{{ form_row(form.numero) }}</div>
            <div class="col-2">{{ form_row(form.numeroSaison) }}</div>
            <div class="col-2">{{ form_row(form.issue) }}</div>

            <div class="col-12">{{ form_row(form.resume,{ 'attr': {'rows': '2'} }) }}</div>

            <!-- IMAGE -->
            <div class="offset-2 col-8 mt-3 mb-5">
                {{ form_label(form.image) }}
                <label for="admin_episode_image" class="preview-label hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible text-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{{ asset(episode.image|default(NA_SESSION)) }}" />
                    <span id="image-filename" class="filename"></span>
                </label>
                <div class="browser">{{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}</div> 
            </div>
            
            {{ include('/parts/btn-form.html.twig') }}
        </div>
    {{ form_end(form) }}
</main>
