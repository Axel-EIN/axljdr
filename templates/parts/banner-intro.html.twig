<section id="element-banner" class="col-12 mb-2">

    <!-- CONTAINER BANNER IMAGE -->
    <div class="row m-0 p-5 text-center"
        style=" background-image:
                    linear-gradient( #00000020 , #000000FF ),
                    linear-gradient( {{un_element.couleur}}AA , {{un_element.couleur}}FF ),
                    url('{{ asset( un_element.image|default('assets/img/placeholders/1280x720.jpg') ) }}');
                background-blend-mode: normal, soft-light;
                background-position: 50% 10%; ">

        {% if un_element.video is defined and un_element.video is not empty %}
            <!-- ICON MUTE / UNMUTE VIDE -->
            <icon id="icon-mute-video" onclick="unfocusVideo()" class="invisible">
                <i class="text-white fa-solid fa-video-slash"></i>
            </icon>

            <!-- OVERLAY -->
            <overlay id="overlay-video"
            style=" background-image:
                        linear-gradient( #00000050 , #000000DD ),
                        linear-gradient(to bottom, {{un_element.couleur}}40, {{un_element.couleur}}BB );
                    background-blend-mode: multiply, multiply;"></overlay>

            <!-- VIDEO -->
            <video id="banner-video" autoplay loop controls muted poster="{{ asset( un_element.image|default('assets/img/placeholders/1280x720.jpg') ) }}">
                <source src="{{asset(un_element.video)}}" type="video/mp4">
            </video>
        {% endif %}

        <!-- ICONE + CITATION + CHAMPION-->
        <div class="col-5 p-0 m-0 pr-3 d-flex flex-column justify-content-center align-items-center" style="z-index: 2;" >

            {% if un_element.estMajeur is defined %}
                {% if un_element.estMajeur == 1 %}
                    <strong class="text-white mb-3 text-shadow">Clan Majeur</strong>
                {% endif %}
            {% endif %}

            {% if un_element.video is defined and un_element.video is not empty %}
                <button id="btn-play" class="btn-unstyle" onclick="focusVideo()">
                    <animation id="zone-mon" class="animation-shine hover-zoom-x2">
                        <i id="icon-play" class="invisible fa-solid fa-video fa-4x"></i>
                        <img class="img-240 filter-shadow" src="{{ asset(icone) }}" alt="Blason" title="Visualiser/Écouter la Vidéo" />
                    </animation>
                </button>
            {% else %}
                <img class="img-240 {{invert}} filter-shadow" src="{{ asset(icone) }}" alt="Icône" />
            {% endif %}
            
            <!-- CITATION -->
            <span class="quote text-white m-0">«&nbsp;{{un_element.citation}}&nbsp;»</span>

            <!-- CHAMPION -->
            {% if un_element.chef is defined %}
                {% if un_element.chef is not empty %}
                    <div class="text-center hover-zoom-x2 mt-3">
                        <a href="{{ path('personnage_profil', {id: un_element.chef.id} ) }}">
                            <img class="img-48" src="{{ asset(un_element.chef.icone) }}" alt="Icône du personnage" />
                        </a>
                        <a class="link-accent" href="{{ path('personnage_profil', {id: un_element.chef.id} ) }}">
                            &nbsp;<strong>{{ un_element.chef.nom }} {{ un_element.chef.prenom }}</strong> (Champion)
                        </a>
                    </div>
                {% endif %}
            {% endif %}

        </div>

        <!-- DESCRIPTION -->
        <div class="col-7 p-0 m-0 pl-5 d-flex flex-column justify-content-end" style="z-index: 2;">
            <p class="text-justify text-white mb-0 text-shadow">
                {{ un_element.description|raw|nl2br }}
            </p>
        </div>

    </div>

    <!-- NAV OTHER ELEMENTS -->
    <nav class="m-0 p-0 d-flex justify-content-center relative {% if un_element.video is not defined or un_element.video is empty %}bg-black{% endif %}" style="z-index: 3; border-bottom: 4px solid {{un_element.couleur}}">
        {% for un_autre_element in all_elements %}
            <a class="text-white py-2 px-4" {% if un_autre_element.id == un_element.id %}style="background-color: {{un_element.couleur}}"{% endif %}
            href="{{ path( category ~ '_' ~ entity , { id: un_autre_element.id, '_fragment' : 'element-banner' } ) }}">
                <strong>{{un_autre_element.nom|upper}}</strong>
            </a>
        {% endfor %}
    </nav>

</section>