<main class="offset-2 col-8">
    {{ form_start(form) }}
        <div class="row justify-content-center align-items-start mt-5 mb-4">
            <div class="col-12">
                {{ form_row(form.titre) }}
            </div> 
            <div class="col-6">
                {{ form_row(form.saisonParent) }}
            </div> 
            <div class="col-6">
                {{ form_row(form.numero) }}
            </div> 
            <div class="col-12">
                {{ form_row(form.citation,{ 'attr': {'rows': '3'} }) }}
            </div>

            <!-- IMAGE -->
            <div class="col-12 mt-3">
                {{ form_label(form.image) }}
                <label id="preview-label" for="admin_chapitre_image" class="{% if type != 'Modifier' %}d-none{% endif %} hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible text-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{% if type == 'Modifier' %}{{ asset(chapitre.image|default(NA_169)) }}{% endif %}" />
                </label>
                <browse id="browse-label">
                    <span id="fileName"></span>
                    {{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}
                </browse> 
            </div>

            <div class="col-12 mt-5">
                {{ form_row(form.couleur) }}
            </div>
            <div class="col-12 text-center mt-5">
                <button class="btn btn-large btn-primary-style">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    {{ form_end(form) }}
</main>