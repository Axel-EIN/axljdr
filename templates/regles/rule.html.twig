{% extends 'element.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('css/rule.css')}}" />
{% endblock %}

{% block element_content %}

    <section class="col-12 p-1 mb-3">
        <div class="list-group">
            {% for i in 1..3 %}
            <a class="list-group-item list-group-item-action" href="#{{i}}" ><strong>{{ attribute(rule, 'part' ~ i ~ 'titre') }}</strong></a>
            {% endfor %}
        </div>
        <img class="img-fluid w-100 mt-3" src="{{asset(rule.image)}}" />
    </section>

    {% for i in 1..3 %}
        <hr class="col-12 mb-3">
        <section id="{{i}}" class="col-8 p-1 mb-3">
            <card class="card card-body">
                <h2>{{ attribute(rule, 'part' ~ i ~ 'titre') }}</h2>
                <hr>
                <p class="text-justify text-regular p-2">{{ attribute(rule, 'part' ~ i)|raw|nl2br }}</p>
            </card>
        </section>

        {% if attribute(rule, 'part' ~ i ~ 'aside') is not empty %}
            <section class="col-4 p-1 mb-3">
                {# <aside class="h-100" style="background-image: url({{asset('assets/img/ui/bg-aside.png')}}); background-size: contain; background-repeat: no-repeat;">
                    <p class="p-3 text-small text-justify">{{ attribute(rule, 'part' ~ i ~ 'aside')|raw|nl2br }}</p>
                </aside> #}
                <aside style="border-color: transparent;
                                            border-style: double;
                                            border-width: 24px 24px 120px 24px;
                                            border-image: url({{asset('assets/img/ui/bg-aside.png')}}) 24 24 120 24 fill repeat;
                                            padding: 10px;" >
                    <p class="p-1 text-small text-justify">{{ attribute(rule, 'part' ~ i ~ 'aside')|raw|nl2br }}</p>
                </aside>
            </section>
        {% endif %}

    {% endfor %}


{% endblock %}
