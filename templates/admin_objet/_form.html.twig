<main class="col-12">
    {{ form_start(form) }}
        <div class="row form-wrapper">

            <div class="col-4">
                {{ form_row(form.nom) }}
                {{ form_row(form.categorie) }}
                {{ form_row(form.type) }}
                {{ form_row(form.prix) }}
            </div>

            <div class="col-4">
                {{ form_row(form.numero) }}
                {{ form_row(form.motCle1) }}
                {{ form_row(form.motCle2) }}
            </div>

            <!-- IMAGE -->
            <div class="col-4">
                {{ form_label(form.image) }}
                <label for="admin_objet_image" class="preview-label hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible text-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{{ asset(objet.image|default(NA_169)) }}" />
                    <span id="image-filename" class="filename"></span>
                </label>
                <div class="browser">{{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}</div> 
            </div>

            <div class="col-12 mt-4">{{ form_row(form.description,{ 'attr': {'rows': '5'} }) }}</div>

            <div class="col-12 mt-3">{{ form_row(form.regles,{ 'attr': {'rows': '3'} }) }}</div>

            <!-- ARME & ARMURES -->
            <section class="col-12 mt-5">
                <h2 class="title-h3">Arme et Armure</h2>
                <hr>
            </section>
            <div class="col-4">{{ form_row(form.taille) }}</div>
            <div class="col-4">{{ form_row(form.vd) }}</div>
            <div class="col-4">{{ form_row(form.forceArc) }}</div>
            
            <div class="col-4">{{ form_row(form.poids) }}</div>
            <div class="col-4">{{ form_row(form.ndArmure) }}</div>
            <div class="col-4">{{ form_row(form.reduction) }}</div>

            {{ include('/parts/btn-form.html.twig') }}
        </div>
    {{ form_end(form) }}
</main>
