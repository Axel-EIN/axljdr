<main class="col-12 mt-5">
    {{ form_start(form) }}
        <div class="row justify-content-center align-items-end mb-4">

            <div class="col-12">{{ form_row(form.desavantage) }}</div>

            <div class="col-6">{{ form_row(form.nom) }}</div>
            <div class="col-4">{{ form_row(form.type) }}</div>
            <div class="col-2">{{ form_row(form.cout) }}</div> 

            <div class="col-4">{{ form_row(form.exclusive) }}</div>
            <div class="col-2">{{ form_row(form.discountClan) }}</div>
            <div class="col-2">{{ form_row(form.discountClan2) }}</div>
            <div class="col-2">{{ form_row(form.discountClasse) }}</div>
            <div class="col-2">{{ form_row(form.discount) }}</div>

            <div class="col-12">
                {{ form_row(form.description,{ 'attr': {'rows': '10'} }) }}
            </div>

            <div class="col-12 text-center mt-5">
                <button class="btn btn-large btn-primary-style">{{ button_label|default('Save') }}</button>
            </div>

        </div>
    {{ form_end(form) }}
</main>