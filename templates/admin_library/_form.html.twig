<main class="col-12">
    {{ form_start(form) }}
        <div class="row form-wrapper">
        
            <div class="col-5">{{ form_row(form.nom) }}</div>
            <div class="col-5">{{ form_row(form.pdf) }}</div>
            <div class="col-1">{{ form_row(form.numero) }}</div> 
            <div class="col-1 align-self-center">{{ form_row(form.base) }}</div>

            <div class="col-3">{{ form_row(form.entity) }}</div>
            <div class="col-3">{{ form_row(form.tabField) }}</div>
            <div class="col-3">{{ form_row(form.subTabField) }}</div>
            <div class="col-3">{{ form_row(form.filterField) }}</div>

            <div class="col-3">{{ form_row(form.keyword1Field) }}</div>
            <div class="col-3">{{ form_row(form.keyword2Field) }}</div>
            <div class="col-3">{{ form_row(form.keyword3Field) }}</div>
            <div class="col-3 align-self-center">{{ form_row(form.mixable) }}</div>

            <!-- TEXTS -->
            <div class="col-8">{{ form_row(form.description,{ 'attr': {'rows': '16'} }) }}</div>
            <div class="col-4">{{ form_row(form.aside,{ 'attr': {'rows': '16'} }) }}</div>

            <!-- IMAGE -->
            <div class="col-12 mt-3 mb-4">
                {{ form_label(form.image) }}
                <label for="admin_library_image" class="preview-label hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible text-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{{ asset(library.image|default(NA_LIBRARY)) }}" />
                    <span id="image-filename" class="filename"></span>
                </label>
                <div class="browser">{{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}</div> 
            </div>

            {{ include('/parts/btn-form.html.twig') }}
        </div>
    {{ form_end(form) }}
</main>
