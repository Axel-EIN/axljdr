<form method="post" action="{{ path('app_login') }}">

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <label for="inputPseudo">Pseudo</label>
    <input type="text" name="pseudo" id="inputPseudo" class="form-control" autocomplete="username" required autofocus>
    <label class="mt-3" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        {# <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">&nbsp;Se souvenir de moi
            </label>
        </div> #}
   
    <div class="d-flex flex-column justify-content-center align-items-center">
        <button class="btn btn-primary mt-4" type="submit">
            Se Connecter
        </button>
        <div>
            <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié ?</a>
        </div>
        <div class="mt-3 text-center">
            <small class="text-muted">Pas encore de compte?</small><br/>
            <a href="{{ path('app_register') }}"><i class="fas fa-user-plus couleur-primaire"></i>&nbsp;&nbsp;Enregistrez-vous!</a>
        </div>

    </div>

</form>

