
{% set path = 'admin_' ~ element ~ '_' ~ action %}
<a class="btn-icon-text {{color}} fa-fade hover-stop"
    href="{{ path(path, {id: un_element.id} ) }}?redirect={{redirect}}{% if action == 'delete' %}&csrf={{ csrf_token('delete' ~ un_element.id) }}{% endif %}"
    {% if action == 'delete' %}onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')"{% endif %}>
        <i class="fas fa-{{ action == 'edit' ? 'edit' : 'trash-alt'}}" alt="Icône {{ action == 'edit' ? 'Modifier' : 'Supprimer'}}"></i>&nbsp;&nbsp;{{ action == 'edit' ? 'Modifier' : 'Supprimer'}}
</a>