{% extends 'base.html.twig' %}
{% set col_xl, col_lg, col_md, col_sm = 2, 3, 4, 6 %}
{% block body %}
    <!-- HEADER TITLE ONLY -->
    <header class="header-bg-img header-bg-{{header_classname}}">
        <div class="container">
            <div class="header d-flex flex-column justify-content-center align-items-center">
                <div class="text-center d-flex justify-content-center">
                    <strong class="h1">
                        {{header_up}}
                    </strong>
                </div>
                <hr class="w-50">     
                <h1 class="big-title-effect title-large">
                    {{header_down|relief|raw}}
                </h1>
            </div>
        </div>
    </header>

    <main class="container-fluid mt-2 pb-5 mb-5">    
        <div class="container">

            {% set compteur = 1 %}
            {% for une_section in sections %}
                {% set entity, label_one = une_section['entity'], une_section['label_one'] %}

                <!-- SECTION {{une_section['name']}} -->
                <section id="{{une_section['entity']}}" class="mb-5"> 

                    <!--TITRE DE LA SECTION -->
                    <h2 class="display-4 relative">
                        {{une_section['titleLight']}}&nbsp;<strong>{{une_section['titleStrong']}}</strong>
                        <!-- BTN MJ ADD ELEMENT -->
                        {{ include('/parts/btn-box-add-element.html.twig', {entity}) }}
                    </h2>
                    <hr>
                    <div class="row mt-3">

                        <!--CONTENU DE LA SECTION -->
                        {{ block('section_content' ~ compteur) }}
                        
                    </div>
                </section>

                {% set compteur = compteur + 1 %}
            {% endfor %}
            
        </div>
    </main>
{% endblock %}
