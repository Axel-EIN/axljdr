<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %} | {{ nom_du_site }}{% endblock %}</title>
        <meta name="description" content="Immergez-vos joueurs, grâce au Gestionnaire de Campagne de Jeu de Rôle : AXL-JDR !">

    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset('css/style.css')}}" />
    {% endblock %}

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
    </head>

    <body>

    {% block nav %}
        {{ include('/parts/nav.html.twig') }}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block javascripts %}
        {{ include('/scripts/scripts.twig') }}
    {% endblock %}

    {% block footer %}
        <footer>

            <div id="pied-de-page1" class="container-fluid py-5">

                <div class="container">
                    <div class="row">
                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 text-white">
                            <h5>Plan du site</h5>
                            <nav>
                                <ul>
                                    <li><a class="footer-link" href="{{ path('aventure') }}">L'Aventure</a></li>
                                    <li><a class="footer-link" href="{{ path('personnages') }}">Personnages</a></li>
                                    <li><a class="footer-link" href="{{ path('empire') }}">L'Empire</a></li>
                                    <li><a class="footer-link" href="{{ path('regles') }}">Les Règles</a></li>
                                    <li><a class="footer-link" href="{{ path('contact') }}">Contactez-Nous</a></li>
                                    <li><a class="footer-link" href="{{ path('cgu') }}">CGU</a></li>
                                    <li><a class="footer-link" href="{{ path('politique_confidentialite') }}">Politique de Confidentialité</a></li>
                                    <li><a class="footer-link" href="{{ path('mentions_legales') }}">Mentions Légales</a></li>
                                    <li><a class="footer-link" href="{{ path('about') }}">A propos</a></li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-xl-2 offset-xl-8 col-lg-3 offset-lg-6 col-md-4 offset-md-4 col-sm-12 col-12 text-white">
                            <h5>Réseaux Sociaux</h5>
                            <nav id="reseaux-sociaux" class="d-flex justify-content-around">
                                <a href="" class="lien-blanc"><i class="fab fa-twitter"></i></a>
                                <a href="" class="lien-blanc"><i class="fab fa-facebook"></i></a> 
                                <a href="" class="lien-blanc"><i class="fab fa-instagram"></i></a>
                            </nav>
                        </div>
                    </div>
                </div>

            </div>

            <div id="pied-de-page2" class="container-fluid py-4">
                <div class="container text-center align-middle">
                    <small>&copy;&nbsp;Site réalisé par Axel Onçu pour l'examen final de Philiance</small>
                </div>
            </div>

        </footer>
    {% endblock %}

    {% if app.user is empty %}
        {{ include('parts/modal.html.twig') }}
    {% endif %}

    </body>
</html>