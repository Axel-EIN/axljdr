<main class="col-12 mt-5">
    {{ form_start(form) }}
        <div class="row justify-content-center align-items-end mb-4">

            <div class="col-4">{{ form_row(form.nom) }}</div>
            <div class="col-4">{{ form_row(form.trait) }}</div>
            <div class="col-4">{{ form_row(form.categorie) }}</div>

            <div class="col-2">{{ form_row(form.globale) }}</div>
            <div class="col-2">{{ form_row(form.degradante) }}</div>
            <div class="col-4">{{ form_row(form.motCle1) }}</div>
            <div class="col-4">{{ form_row(form.motCle2) }}</div>

            <div class="col-2">{{ form_row(form.specialisation1) }}</div>
            <div class="col-2">{{ form_row(form.specialisation2) }}</div>
            <div class="col-2">{{ form_row(form.specialisation3) }}</div>
            <div class="col-2">{{ form_row(form.specialisation4) }}</div>
            <div class="col-2">{{ form_row(form.specialisation5) }}</div>
            <div class="col-2">{{ form_row(form.specialisation6) }}</div>

            <div class="col-12">
                {{ form_row(form.capacite,{ 'attr': {'rows': '3'} }) }}
            </div>

            <div class="col-12">
                {{ form_row(form.description,{ 'attr': {'rows': '10'} }) }}
            </div>

            <div class="col-12 text-center mt-5">
                <button class="btn btn-large btn-primary-style">{{ button_label|default('Save') }}</button>
            </div>

        </div>
    {{ form_end(form) }}
</main>