<main class="offset-2 col-8">
    {{ form_start(form) }}
        <div class="my-3 row justify-content-between align-items-center">
            <div class="col">{{ form_row(form.nom) }}</div>
            <div class="col">{{ form_row(form.chef) }}</div>
            <div class="col">Statut : {{ form_row(form.est_majeur) }}</div>
        </div>
        <div class="mx-1 my-3 row justify-content-between align-items-center">
            <div class="d-flex w-100 align-items-center">
                {% if type != 'Cr√©er' %}
                    <img class="img-160 mr-4" src="{{ asset(clan.mon) }}" />
                {% endif %}
                <div class="w-100">
                    {{ form_row(form.mon) }}
                    {{ form_row(form.couleur) }}
                </div>
            </div>
        </div>
        {{ form_widget(form.description, { 'attr' : {'rows': '35'}}) }}
        <br/>
        {{ form_widget(form) }}
        <div class="text-center">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    {{ form_end(form) }}
</main>