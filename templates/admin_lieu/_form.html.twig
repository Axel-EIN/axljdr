<main class="offset-2 col-8">
    {{ form_start(form) }}
        <div class="row justify-content-center align-items-end mt-5 mb-4">
            <div class="col-6">
                {{ form_row(form.Nom) }}
            </div> 
            <div class="col-6">
                {{ form_row(form.clan) }}
            </div> 
            <div class="col-12">
                {% if type == 'Modifier' and lieu.image is not empty %}
                    <img class="img-fluid" src="{{ asset(lieu.image) }}" />
                {% endif %}
            </div>
            <div class="col-12">
                {{ form_row(form.image) }}
            </div> 
            <div class="col-6">
                {% if type == 'Modifier' and lieu.carte is not empty %}
                    <img class="img-fluid" src="{{ asset(lieu.carte) }}" />
                {% endif %}
            </div>
            <div class="col-6">
                {% if type == 'Modifier' and lieu.region is not empty %}
                    <img class="img-fluid" src="{{ asset(lieu.region) }}" />
                {% endif %}
            </div> 

            <div class="col-6">
                {{ form_row(form.carte) }}
            </div> 
            <div class="col-6">
                {{ form_row(form.region) }}
            </div>
            <div class="col-6">
                {{ form_row(form.locX) }}
            </div>
            <div class="col-6">
                {{ form_row(form.locY) }}
            </div> 
            <div class="col-12">
                {{ form_row(form.description,{ 'attr': {'rows': '10'} }) }}
            </div>
            <div class="col-12 text-center mt-5">
                <button class="btn btn-large btn-primary-style">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    {{ form_end(form) }}
</main>