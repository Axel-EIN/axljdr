<section class="col-12 px-4 m-0 mb-2">
    <div class="row p-5"
        style=" background-image:
                    linear-gradient( #00000040 , #000000BB, #000000DD ),
                    linear-gradient( {{un_element.couleur}}99 , {{un_element.couleur}}FF ),
                    url('{{ asset( un_element.image|default('assets/img/placeholders/1280x720.jpg') ) }}')
                    ;
                background-blend-mode: normal, soft-light;
                background-position: 50% 10%;
    ">

        <div class="col-5 p-0 px-5 m-0 d-flex flex-column justify-content-center align-items-center">
            {% if un_element.estMajeur is defined %}
                {% if un_element.estMajeur == 1 %}
                    <strong class="text-accent mb-3">Clan Majeur</strong>
                {% endif %}
            {% endif %}
            <img class="img-240 {{invert}}" src="{{ asset(icone) }}" alt="Blason" />
            <span class="quote text-white m-0">« {{un_element.citation}} »</span>
        </div>

        <div class="col-7 p-0 m-0 pl-3 d-flex flex-column justify-content-end">

            <div class="text-justify text-white mb-3">
                {{ un_element.description|raw|nl2br }}
            </div>

            {% if un_element.chef is defined %}
                {% if un_element.chef is not empty %}
                    <div class="text-center hover-zoom-x2 mt-3">
                        <a href="{{ path('personnage_profil', {id: un_element.chef.id} ) }}">
                            <img class="img-64" src="{{ asset(un_element.chef.icone) }}" alt="Icône du personnage" />
                        </a>
                        <a class="link-accent" href="{{ path('personnage_profil', {id: un_element.chef.id} ) }}">
                            &nbsp;<strong>{{ un_element.chef.nom }} {{ un_element.chef.prenom }}</strong> (Champion)
                        </a>
                    </div>
                {% endif %}
            {% endif %}

        </div>
    </div>
</section>