<main class="col-12">
    {{ form_start(form) }}
        <div class="row form-wrapper">
            <div class="col-4">{{ form_row(form.titre) }}</div> 
            <div class="col-4">{{ form_row(form.saisonParent) }}</div> 
            <div class="col-2">{{ form_row(form.numero) }}</div> 
            <div class="col-2">{{ form_row(form.couleur) }}</div>
            <div class="col-12">{{ form_row(form.citation,{ 'attr': {'rows': '3'} }) }}</div>

            <!-- IMAGE -->
            <div class="col-12 mt-3 mb-5">
                {{ form_label(form.image) }}
                <label for="admin_chapitre_image" class="preview-label hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible text-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{{ asset(chapitre.image|default(NA_CHAPITRE)) }}" />
                    <span id="image-filename" class="filename"></span>
                </label>
                <div class="browser">{{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}</div> 
            </div>
            
            {{ include('/parts/btn-form.html.twig') }}
        </div>
    {{ form_end(form) }}
</main>
