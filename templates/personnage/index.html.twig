{% extends 'category.html.twig' %}
{% block title %}Personnages de l'Aventure {{ parent() }}{% endblock %}

{% block section_content1 %}
    {% for un_pj in pjs %}
        <!-- UN PERSONNAGE JOUEUR -->
        <article class="col-xl-2 col-lg-3 col-md-4 col-sm-6 py-3">
            <a href="{{ path('personnage_profil', {id: un_pj.id} ) }}" alt="Carte d'un personnage" title="Voir le profil de {{un_pj.prenom}}">
                <div class="card character-card text-white shadowed hover-zoom {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}translucide{% endif %} hover-opaque">  
                    <img class="corner-badge {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}dead{% endif %}" src="{{ asset(un_pj.clan.mon) }}" alt="Mon d'un clan"/>
                        {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}
                            <img class="icon-dead-big" src="{{asset('assets/img/icons/mort.png')}}" alt="Icône est mort" />
                        {% endif %}
                    <div class="mask-bg-dark">
                        <img class="card-img {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}dead{% endif %}"
                            src="{{ asset(un_pj.illustration) }}" alt="Illustration d'un personnage" />
                    </div>
                    <div class="card-img-overlay">
                        <h4 class="card-title {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}text-danger{% else %}text-white{% endif %}">{{ un_pj.nom }} {{ un_pj.prenom }}</h4>
                        <p class="card-text {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}text-danger{% else %}text-white{% endif %}"><small>{{ un_pj.joueur.pseudo }}</small></p>
                        <p class="card-text {% if un_pj.estMort is not empty and un_pj.estMort == 1 %}text-danger{% else %}text-white{% endif %}"><small>{{ un_pj.titres }}</small></p>
                    </div>
                </div>
            </a>
        </article>
    {% endfor %}
{% endblock %}

