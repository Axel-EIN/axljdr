<main class="col-12">
    {{ form_start(form) }}
        <div class="row justify-content-center align-items-end mt-5 mb-4">
        
            <div class="col-5">{{ form_row(form.nom) }}</div>
            <div class="col-2">{{ form_row(form.numero) }}</div> 
            <div class="col-4">{{ form_row(form.pdf) }}</div>
            <div class="col-1">{{ form_row(form.base) }}</div>

            <div class="col-3">{{ form_row(form.entity) }}</div>
            <div class="col-3">{{ form_row(form.tabField) }}</div>
            <div class="col-3">{{ form_row(form.subTabField) }}</div>
            <div class="col-2">{{ form_row(form.filterField) }}</div>
            <div class="col-1">{{ form_row(form.mixable) }}</div>

            <!-- IMAGE -->
            <section id="image" class="col-10 mt-3 mb-5">
                {{ form_label(form.image) }}
                <label id="preview-label" for="admin_library_image" class="{% if type != 'Modifier' %}d-none{% endif %} hover-slight-fade hover-pointer hover-icon-visible">
                    <icon class="btn-icon-medium right-corner-16"><i class="fas fa-edit semi-visible link-white"></i></icon>
                    <img id="image-preview" class="img-fluid" src="{% if type == 'Modifier' %}{{ asset(library.image|default(NA_LIBRARY)) }}{% endif %}" />
                </label>
                <browse id="browse-label">
                    <span id="fileName"></span>
                    {{form_widget(form.image, {'attr': {'class': 'input-image'}}) }}
                </browse> 
            </section>

            <!-- TEXTS -->
            <div class="col-8">{{ form_row(form.description,{ 'attr': {'rows': '16'} }) }}</div>
            <div class="col-4">{{ form_row(form.aside,{ 'attr': {'rows': '16'} }) }}</div>

            <!-- SAVE -->
            <div class="col-12 text-center mt-5">
                <button class="btn btn-large btn-primary-style">{{ button_label|default('Save') }}</button>
            </div>

        </div>
    {{ form_end(form) }}
</main>