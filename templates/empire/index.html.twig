{% extends 'category.html.twig' %}
{% block title %}L'Univers de l'Aventure {{ parent() }}{% endblock %}

{% block section_content1 %}
    {% for une_archive in archives %}

        <!-- UNE ARCHIVE -->
        <article class="col-xl-2 col-lg-3 col-md-4 col-sm-6 py-3 text-center {% if une_archive.locked == 1 %}translucide{% else %}hover-zoom-X2{% endif %}">
            {% if une_archive.locked == 1 %}
            <div class="relative">
                <img class="icon-lock grayscale fa-beat-fade" src="{{asset('assets/img/icons/locked.png')}}" alt="Icône cadena" title="Archive à débloquer !" />
                <img class="img-fluid grayscale" src="{{ asset(une_archive.image) }}" alt="Image d'une Archive" title="Archive à débloquer !"/>
                <h4 class="text-center h5"><strong>???</strong></h4>
            </div>
            {% else %}
            <div class="relative">
                <a href="{{ path('empire_archive', {id: une_archive.id} ) }}">
                    <img class="img-fluid" src="{{ asset(une_archive.image) }}" alt="Image d'une Archive" title="Lire {{une_archive.titre}}" />
                </a>
                <h5 class="text-center"><strong><a href="{{ path('empire_archive', {id: une_archive.id} ) }}">{{ une_archive.titre }}</a></strong></h5>
            </div>
        {% endif %}
        </article>

    {% endfor %}
{% endblock %}

{% block section_content2 %}
    <div class="col-9">
        <h4 class="text-secondary">Clans Majeurs</h4>
        <div class="row mt-3">
        {% for un_clan_majeur in clansMajeurs %}

            <!-- UN CLAN MAJEUR -->
            <article class="col-lg-3 col-md-4 col-sm-6 py-3 text-center hover-zoom hover-shine">
                <a href="{{ path('empire_clan', {id: un_clan_majeur.id} ) }}"><img class="img-160" src="{{ asset(un_clan_majeur.mon) }}" alt="Mon du clan" /></a>
                <br/>
                <h3 class="text-center my-3"><strong><a href="{{ path('empire_clan', {id: un_clan_majeur.id} ) }}">{{ un_clan_majeur.nom }}</a></strong></h3>
            </article>

        {% endfor %}
        </div>
    </div>
    <div class="col-3 border-left">
    <h4 class="text-secondary text-center">Autres</h4>
        <div class="row mt-3">
        {% for un_clan_autre in clansAutres %}

            <!-- UN CLAN AUTRE -->
            <article class="col-lg-6 col-md-12 col-sm-12 py-3 text-center hover-zoom hover-shine">
                <a href="{{ path('empire_clan', {id: un_clan_autre.id} ) }}"><img class="img-96" src="{{ asset(un_clan_autre.mon) }}" alt="Mon du clan" /></a>
                <br/>
                <h5 class="text-center my-3"><strong><a href="{{ path('empire_clan', {id: un_clan_autre.id} ) }}">{{ un_clan_autre.nom }}</a></strong></h5>
            </article>

        {% endfor %}
        </div>
    </div>
{% endblock %}

{% block section_content3 %}
    {% for un_lieu in lieux %}

        <!-- UN LIEU -->
        <article class="col-xl-2 col-lg-3 col-md-4 col-sm-6 py-3 text-center hover-zoom-X2">
            <a href="{{ path('empire_lieu', {id: un_lieu.id} ) }}">
                <img class="img-160" src="{{ asset(un_lieu.image) }}" alt="Image du Lieu" title="Voir {{un_lieu.nom}}" />
            </a>
            <br/>
            <h3 class="text-center my-3">
                <strong>
                    <a href="{{ path('empire_lieu', {id: un_lieu.id} ) }}">{{ un_lieu.nom }}</a>
                </strong>
            </h3>
        </article>

    {% endfor %}
{% endblock %}
